{% extends 'base.html.twig' %}
{% block body %}
    <div style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px; width: 100%">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Update demande</h5>

                <!-- General Form Elements -->
                {{ form_start(form) }}

                <label for="inputText" class="col-sm-6 col-form-label">NumDemande</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numDemande,{'attr':{'class':'form-control'}}) }}
                </div>



                <label for="inputText" class="col-sm-6 col-form-label">TypeDemande</label>
                <div class="col-sm-10">
                    {{ form_widget(form.typeDemande,{'attr':{'class':'form-control'}}) }}
                </div>




                <label for="inputText" class="col-sm-6 col-form-label">DateDemande</label>
                <div class="col-sm-10">
                    {{ form_widget(form.dateDemande,{'attr':{'class':'form-control'}}) }}
                </div>

                <label for="inputText" class="col-sm-6 col-form-label">Etat</label>
                <div class="col-sm-10">
                    {{ form_widget(form.etat,{'attr':{'class':'form-control'}}) }}
                </div>




                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                    {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                </div>






                {{ form_end(form) }}


                </form><!-- End General Form Elements -->

            </div>
        </div>

    </div>
{% endblock %}
