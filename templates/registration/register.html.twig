
{% block title %}Register{% endblock %}





    {% block body %}
        <main id="main" class="main">


            <section class="section">
                <div class="row">
                    <div class="col-lg-6">

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Ajout D'un Citoyen</h5>

                                <!-- Vertical Form -->
                                {{ form_start(registrationForm,{'attr':{'novalidate': 'novalidate'}})  }}


                                <label for="inputNanme4" class="form-label">Nom :</label>
                                {{ form_widget(registrationForm.nom,{'attr':{'class':'form-control'}}) }}
                                <span style="color:red">{{ form_errors(registrationForm.nom) }}</span>


                                <label for="inputNanme4" class="form-label">Pr√©nom :</label>
                                {{ form_widget(registrationForm.prenom,{'attr':{'class':'form-control'}}) }}
                                <span style="color:red">{{ form_errors(registrationForm.prenom) }}</span>


                                <label for="inputEmail4" class="form-label">Email :</label>
                                {{ form_widget(registrationForm.email,{'attr':{'class':'form-control'}}) }}
                                <span style="color:red">{{ form_errors(registrationForm.email) }}</span>

                                <label for="inputNanme4" class="form-label">CIN :</label>
                                {{ form_widget(registrationForm.cin,{'attr':{'class':'form-control'}}) }}
                                <span style="color:red">{{ form_errors(registrationForm.cin) }}</span>



                                <label for="inputPassword4" class="form-label">Mot De Passe :</label>
                                {{ form_widget(registrationForm.motDePasse,{'attr':{'class':'form-control'}}) }}
                                <span style="color:red">{{ form_errors(registrationForm.motDePasse) }}</span>


                                <label for="inputPassword4" class="form-label">Confirmer Mot De Passe :</label>
                                {{ form_widget(registrationForm.confirmMotDePasse,{'attr':{'class':'form-control'}}) }}
                                <span style="color:red">{{ form_errors(registrationForm.confirmMotDePasse) }}</span>


                                <br/>
                                <div class="text-center">
                                    {{ form_widget(registrationForm.ajouter,{'attr':{'class':'btn btn-primary'}})}}
                                    <button type="reset" class="btn btn-secondary">Annuler</button>
                                </div>
                                {{ form_end(registrationForm) }}<!-- Vertical Form -->


                            </div>
                        </div>
                    </div>
                    <a href="{{ path('app_gestio_citoyen_index')}}">Liste Des Citoyens</a>
                </div>
            </section>
        </main>
{% endblock %}
